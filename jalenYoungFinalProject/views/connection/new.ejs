<%- include('../partials/header.ejs')%>
<div class="content">
    <main>
        <div class="overview"> 
            <form method = 'POST' action="/connections">
                Title:
                <input type="text" id="title" name="title" size="50" required>
                <br> <br>
                Category:  
                <input type="text" id="category" name="category" size="50" required> 
                <br> <br>
                Details:  
                <textarea rows="5" id="details" name="details" cols="50" class="align-top" required minlength="10"></textarea>  
                <br> <br>
                Location:  
                <input type="text" id="location" name="location"  size="50" required>  
                <br> <br>
                When:  
                <input type="date" id="date" name="date" size="50" required>  
                <br> <br>
                Start:  
                <input type="time" id="startTime" name="startTime"  size="50" required>  
                <br> <br>
                End:  
                <input type="time" id="endTime" name="endTime" size="50" required>   
                <br> <br>
                Image:  
                <input type="text" id="imageURL" name="imageURL" size="50" placeholder="Insert image url" required>   
                <br> <br>
                <div id="side"> <button type="submit"> Create new connection </button> </div>
            </form>
        </div>       
    </main>

</div>
<%- include('../partials/footer.ejs')%>